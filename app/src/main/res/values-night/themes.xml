<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetProject_app_Notepad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.PetProject_app_Notepad.Background" parent="Theme.PetProject_app_Notepad">
        <item name="android:background">@drawable/shape_background_night</item>
    </style>

    <style name="Theme.PetProject_app_Notepad.BackgroundImageView" parent="Theme.PetProject_app_Notepad">
        <item name="android:background">@drawable/shape_background_image_night</item>
    </style>

    <style name="Theme.PetProject_app_Notepad.FAB" parent="Theme.PetProject_app_Notepad">
        <item name="colorSecondary">@color/grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="rippleColor">@color/grey_lightest</item>
    </style>

    <style name="Theme.PetProject_app_Notepad.EditText" parent="Theme.PetProject_app_Notepad">
        <item name="android:textColorHint">@color/grey_lightest</item>
        <item name="android:textColorHighlight">@color/grey_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.PetProject_app_Notepad.TextView" parent="Theme.PetProject_app_Notepad">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>